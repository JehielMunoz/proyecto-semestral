<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".BuscarUsuario">

    <TextView
        android:id="@+id/aaTituloActas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERAR ACTAS"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/aaTitNroFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Nro. Factura"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTituloActas"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <EditText
        android:id="@+id/aaNroFacturaBusq"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTituloActas"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/exitColor"
        tools:ignore="MissingConstraints"
        android:ems="10"
        />

    <Button
        android:id="@+id/aaBtnBuscarFactura"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="#3B7A20"
        android:text="BUSCAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTituloActas"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.9"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/aaBarraSeparadora"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/barra_separadora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaNroFacturaBusq"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/aaTitNombreProyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Nombre proyecto"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaBarraSeparadora"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <EditText
        android:id="@+id/aaBusqNombreProyecto"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaBarraSeparadora"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.85"
        />

    <TextView
        android:id="@+id/aaTitCentroCostos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Subvención\n(Centro de Costos)"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitNombreProyecto"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <EditText
        android:id="@+id/aaBusqCentroCostos"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:text=""
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/white"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaBusqNombreProyecto"
        android:layout_marginTop="22dp"
        app:layout_constraintHorizontal_bias="0.85"
        />

    <TextView
        android:id="@+id/aaTitEncInventario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Encargado inventario"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitCentroCostos"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <EditText
        android:id="@+id/aaEncargadoInventario"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaBusqCentroCostos"
        android:layout_marginTop="22dp"
        app:layout_constraintHorizontal_bias="0.85"
        />

    <TextView
        android:id="@+id/aaTitRespMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Responsable material"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitEncInventario"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <EditText
        android:id="@+id/aaResponsableMaterial"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitEncInventario"
        android:layout_marginTop="22dp"
        app:layout_constraintHorizontal_bias="0.85"
        />

    <TextView
        android:id="@+id/aaTitUbEspecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Ubicación especies"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitRespMaterial"
        android:layout_marginTop="22dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <EditText
        android:id="@+id/aaUbEspecies"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaResponsableMaterial"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.85"
        />

    <TextView
        android:id="@+id/aaTitFechaRecepcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Fecha recepción"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitUbEspecie"
        android:layout_marginTop="22dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <EditText
        android:id="@+id/aaFechaRecepcion"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:inputType="datetime"
        android:textColor="@color/white"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaUbEspecies"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.85"
        />

    <TextView
        android:id="@+id/aaTitItemsAsociados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Especies asociadas al número de factura"
        android:textColor="@color/btnColor"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitFechaRecepcion"
        android:layout_marginTop="22dp"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <ListView
        android:id="@+id/aaItemsEncontrados"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:background="@color/btnColor"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaTitItemsAsociados"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="80dp"/>

    <Button
        android:id="@+id/aaBtnGenerarActa"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="#3B7A20"
        android:text="Generar Acta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaItemsEncontrados"
        app:layout_constraintHorizontal_bias="0.75"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/aaBtnRetorno"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="#3B7A20"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aaItemsEncontrados"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>