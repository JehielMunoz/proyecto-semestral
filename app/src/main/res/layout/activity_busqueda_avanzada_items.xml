<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantallaazul"
    tools:context=".busquedaAvanzadaItems"
>

    <TextView
        android:id="@+id/baTituloBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSQUEDA AVANZADA"
        android:textColor="@color/btnColor"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/baTitNroFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número factura"
        android:textColor="@color/btnColor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/baTituloBusqueda"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/baNroFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/exitColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baTituloBusqueda"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.85"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/baTitRutProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rut proveedor"
        android:textColor="@color/btnColor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintTop_toBottomOf="@+id/baNroFactura"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/baRutProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text=""
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baNroFactura"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.85"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/baTitFechaRecepcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha recepción"
        android:textColor="@color/btnColor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/baRutProveedor"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/baFechaRecepcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text=""
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        android:inputType="datetime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baRutProveedor"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.85"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/baMargenDos"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baFechaRecepcion"
        app:srcCompat="@drawable/barra_separadora"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/baEstadoSpinner"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btnpress"
        android:textColor="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baMargenDos"
        android:layout_marginTop="18dp"
        app:layout_constraintHorizontal_bias="0.25"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/baTitEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textColor="@color/btnColor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintTop_toBottomOf="@+id/baMargenDos"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/baTitCentroCostos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centro de Costos"
        android:textColor="@color/btnColor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintTop_toBottomOf="@+id/baMargenDos"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/baCentroCostos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="80dp"
        android:text=""
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baMargenDos"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.9"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/baTitUbicacionEspecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación"
        android:textColor="@color/btnColor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintTop_toBottomOf="@+id/baCentroCostos"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/baUbicacionEspecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:text=""
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"
        android:background="@drawable/btnpress_bourder"
        android:backgroundTint="@color/btnColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baCentroCostos"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.75"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/baBtnCancelar"
        android:layout_width="107dp"
        android:layout_height="37dp"
        android:background="@drawable/btnpress"
        android:text="Cancelar"
        app:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baUbicacionEspecie"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/baBtnBusqueda"
        android:layout_width="107dp"
        android:layout_height="37dp"
        android:background="@drawable/btnpress"
        android:text="buscar"
        app:backgroundTint="#3B7A20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baUbicacionEspecie"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.9"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/baBtnReinicioBusq"
        android:layout_width="107dp"
        android:layout_height="37dp"
        android:background="@drawable/btnpress"
        android:text="Limpiar campos"
        app:backgroundTint="#3B7A20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baUbicacionEspecie"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.5"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/baItemsEncontrados"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/btnColor"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@+id/baBtnBusqueda"
        android:layout_marginTop="390dp"
        android:layout_marginBottom="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>