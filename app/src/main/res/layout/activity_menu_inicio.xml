<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"> <!-- collapse the first column of the table row-->
        <!-- first row of the table layout-->
        <TableRow
            android:padding="2dip"
            android:layout_marginTop="150px"
            android:layout_marginBottom="150px">

            <TextView
                android:id="@+id/titulo_bienvenida"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="15dip"
                android:text="BIENVENIDO"
                android:textColor="#009688"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_span="2"
                android:ems="10"/>
            <!-- Add elements/columns in the first row-->
        </TableRow>

        <TableRow android:layout_marginVertical="10dp">

            <Button
                android:id="@+id/IngresoItemsBtn"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@drawable/btnpress_bourder"
                android:text="Ingreso ítems"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:onClick="onClick"
                app:backgroundTint="@color/btnColor"/>

            <Button
                android:id="@+id/BuscarItemsBtn"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="@drawable/btnpress_bourder"
                android:text="Buscar ítems"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:onClick="onClick"
                app:backgroundTint="@color/btnColor" />
        </TableRow>

        <TableRow android:layout_marginVertical="10dp">

            <Button
                android:id="@+id/RegistroProvedorBtn"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@drawable/btnpress_bourder"
                android:onClick="sendMessage"
                android:backgroundTint="@color/teal_700"
                android:autoSizeTextType="uniform"
                android:text="Registro proveedor"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BuscarProvedorBtn"
                android:layout_height="wrap_content"
                android:text="Buscar Proveedor"
                android:autoSizeTextType="uniform"
                android:background="@drawable/btnpress_bourder"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:layout_column="1"
                />
        </TableRow>

        <TableRow android:layout_marginVertical="10dp">

            <Button
                android:id="@+id/RegistroUsuariosBtn"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@drawable/btnpress_bourder"
                android:onClick="sendMessage"
                android:backgroundTint="@color/teal_700"
                android:text="Crear usuario"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BuscarUsuarioBtn"
                android:layout_height="wrap_content"
                android:text="Buscar usuario"
                android:background="@drawable/btnpress_bourder"
                android:textColor="@color/white"
                android:backgroundTint="@color/teal_700"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_column="1"
                />
        </TableRow>


        <TableRow android:layout_marginVertical="10dp">
            <Button
                android:id="@+id/ExportarDatosBtn"
                android:layout_height="wrap_content"
                android:text="Exportar datos"
                android:background="@drawable/btnpress_bourder"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                />

            <Button
                android:id="@+id/GenerarActasBtn"
                android:layout_height="wrap_content"
                android:text="Generar actas"
                android:background="@drawable/btnpress_bourder"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_column="1"
                />
        </TableRow>
        <TableRow android:layout_marginVertical="10dp">
            <Button
                android:id="@+id/SolicitudAdminBtn"
                android:layout_height="wrap_content"
                android:text="Solicitudes"
                android:background="@drawable/btnpress_bourder"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_column="0"
                />

            <Button
                android:id="@+id/CerrarSesionBtn"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btnpress_bourder"
                android:fontFamily="monospace"
                android:text="Cerrar Sesion"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#B66B3A" />
        </TableRow>
    </TableLayout>
</LinearLayout>